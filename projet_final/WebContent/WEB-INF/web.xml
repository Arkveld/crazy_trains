	id="WebApp_ID" version="4.0">
	<display-name>projet_final</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Import de la JSTL  -->
	<jsp-config>
		<jsp-property-group>
			<url-pattern> *.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
	
	<!-- CSS -->
	<servlet-mapping>
  		<servlet-name> default</servlet-name>
  		<url-pattern>*.css</url-pattern>
  	</servlet-mapping>
  
  <!-- JS -->
  	<servlet-mapping>
  		<servlet-name> default</servlet-name>
  		<url-pattern>*.js</url-pattern>
  	</servlet-mapping>
  	
  <!-- png -->
  <servlet-mapping>
  		<servlet-name> default</servlet-name>
  		<url-pattern>/assets/images/*.png</url-pattern>
  	</servlet-mapping>
  	
   <!-- jpg -->
  <servlet-mapping>
  		<servlet-name> default</servlet-name>
  		<url-pattern>/assets/images/*.jpg</url-pattern>
  	</servlet-mapping>
	
